<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Hello Servlet</servlet-name>
        <servlet-class>lk.ijse.gdse68.HelloServlet</servlet-class>
        <init-param>
            <param-name>city</param-name>
            <param-value>Galle</param-value>
        </init-param>
    </servlet>
    
    <servlet>
        <servlet-name>Syrex Servelet</servlet-name>
        <servlet-class>lk.ijse.gdse68.SyrexServlet</servlet-class>
        <init-param>
            <param-name>city</param-name>
            <param-value>panadura</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>Hello Servlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>Syrex Servelet</servlet-name>
        <url-pattern>/syrex</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>country</param-name>
        <param-value>Sri lanka</param-value>
    </context-param>
    
</web-app>